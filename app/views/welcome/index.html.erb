<h1>Bookboard</h1>
<p>Find desired books</p>

<%= link_to 'Books', books_path %> 
<%= link_to 'Users', users_path %> 
<%= link_to 'Locations', locations_path %> 
<%= link_to 'Genres', genres_path %>  
<%= link_to 'Authors', authors_path %>
<br>
<h1>Recent books</h1>
<div>
	<% @books.each do |book| %>
      	<div>
      		<%= image_tag book.image.url(:thumb) if book.image? %><br>
      		<%= link_to book.title+" added "+book.created_at.to_s, book_path(book) %>			
      	</div>
      	<hr>
	<% end %>
</div>
