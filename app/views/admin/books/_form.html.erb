<%= form_with(model: [:admin, book], html:{multipart: true}, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>
  <div class="field">
    <%#= form.label :image %>
    <%= form.file_field :image, id: :book_image %>
  </div>
  <div class="field">
    <%= form.label :language %>
    <%= form.select(:language, [['русский'], ['английский']]) %>

    <%#= form.text_field :language, id: :book_language %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :book_description %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select(:user_id, User.all, :id, :name_with_initial) %>
    <%#= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :author_id %>
    <%= form.collection_select(:author_id, Author.all, :id, :name_with_initial) %>
    <%#= form.collection_select(:author_id, Author.all, :id, :name) %>
    
  </div>

  <div class="field">
    <%= form.label :genre_id %>
    <%#= form.text_field :genre_id, id: :book_genre_id %>
    <%= form.collection_select(:genre_id, Genre.all, :id, :genre_name) %>
  </div>
  <div class="field">
    <%= form.label :location_id %>
    <%#= form.text_field :genre_id, id: :book_genre_id %>
    <%= form.collection_select(:location_id, Location.all, :id, :name) %>
  </div>
  <div class="field">
    <%= form.label :rating %>
    <%= form.text_field :rating, id: :book_rating %>
  </div>
  <div class="field">
    <%= form.label :holder_id %>
    <%= form.collection_select(:holder_id, User.all, :id, :name_with_initial, include_blank: 'no holder') %>
    <%#= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
